<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/instabug_survey_dialog_container"
    android:paddingLeft="@dimen/instabug_survey_dialog_padding_left_right"
    android:paddingTop="@dimen/instabug_survey_dialog_padding_top_bottom"
    android:paddingRight="@dimen/instabug_survey_dialog_padding_left_right"
    android:paddingBottom="@dimen/instabug_dialog_padding_left_right"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/instabug_dialog_survey_container"
        android:background="?attr/survey_container_bg"
        android:paddingTop="@dimen/instabug_survey_container_padding"
        android:paddingBottom="@dimen/instabug_survey_container_padding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/instabug_survey_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:gravity="center"
                android:layout_gravity="top|left"
                android:id="@+id/instabug_ic_survey_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textAlignment="center"
                android:layout_marginStart="8dp"/>
            <TextView
                android:textColor="@color/instabug_survey_txt_color_grey"
                android:id="@+id/instabug_question_count_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/instabug_dialog_title_container"
            android:background="?attr/instabug_background_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/instabug_survey_pager_top_space"
            android:layout_weight="1">
            <com.instabug.library.p031ui.custom.InstabugViewPager
                android:id="@+id/instabug_survey_pager"
                android:background="?attr/instabug_background_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout
            android:gravity="end|center_vertical"
            android:orientation="vertical"
            android:id="@+id/instabug_btn_submit_container"
            android:background="?attr/instabug_background_color"
            android:layout_width="match_parent"
            android:layout_height="52dp">
            <Button
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="end|center_vertical"
                android:id="@+id/instabug_btn_submit"
                android:background="@null"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="8dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:minWidth="64dp"
                android:text="@string/instabug_str_action_submit"
                android:textAllCaps="true"/>
        </LinearLayout>
        <include layout="@layout/instabug_lyt_pbi"/>
    </LinearLayout>
</LinearLayout>
