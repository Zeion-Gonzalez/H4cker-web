<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center"
    android:id="@+id/instabug_intro_dialog"
    android:background="@android:color/white"
    android:padding="@dimen/instabug_dialog_container_padding"
    android:layout_width="wrap_content"
    style="@style/InstabugBaseContainer">
    <FrameLayout
        android:id="@+id/animation_container"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/touchesImageView"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible"
            android:layout_width="220dp"
            android:layout_height="120dp"/>
        <ImageView
            android:id="@+id/fingersImageView"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_width="220dp"
            android:layout_height="120dp"/>
    </FrameLayout>
    <TextView
        android:textSize="@dimen/instabug_normal_text_size"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:id="@+id/animation_description"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-32dp"
        android:layout_below="@+id/animation_container"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
