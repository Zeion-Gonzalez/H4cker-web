<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/instabug_grid_video_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="?attr/instabug_attachment_bg_color"
        android:padding="@dimen/instabug_bottom_sheet_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/instabug_bottom_sheet_padding">
        <ImageView
            android:id="@+id/instabug_img_video_attachment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:minHeight="100dp"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/instabug_btn_video_play_attachment"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/instabug_ic_play"/>
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/instabug_attachment_progress_bar"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            style="@android:style/Widget.ProgressBar.Small"/>
    </FrameLayout>
    <com.instabug.library.view.IconView
        android:textSize="18sp"
        android:textColor="?attr/instabug_attachment_bg_icon_color"
        android:gravity="top|right"
        android:id="@+id/instabug_btn_remove_attachment"
        android:layout_width="@dimen/instabug_remove_attachment_button_size"
        android:layout_height="@dimen/instabug_remove_attachment_button_size"
        android:layout_alignParentRight="true"
        xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:instabug_icon="cancel"/>
</RelativeLayout>
