<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="?attr/survey_container_bg"
        android:padding="16dp"
        android:layout_width="@dimen/ib_survey_thanks_dialog"
        android:layout_height="@dimen/ib_survey_thanks_dialog"
        android:layout_margin="40dp">
        <ImageView
            android:id="@+id/instabug_img_thanks"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_survey_thankyou"/>
        <TextView
            android:textSize="@dimen/Instabug_text_medium"
            android:textColor="?attr/instabug_survey_edittext_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/instabug_str_survey_thanks"/>
        <TextView
            android:textSize="@dimen/instabug_button_text_size"
            android:textColor="@color/instabug_text_color_light_grey"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/instabug_str_survey_thanks_msg"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>
</LinearLayout>
