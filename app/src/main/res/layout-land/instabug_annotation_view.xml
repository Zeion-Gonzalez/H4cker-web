<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="center"
    style="@style/InstabugBaseContainer">
    <FrameLayout
        android:id="@+id/instabug_annotation_image_container"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/divider"
        android:layout_centerVertical="true">
        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/instabug_annotation_image_border"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.instabug.library.annotation.AnnotationView
                android:id="@+id/instabug_annotation_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
        </FrameLayout>
    </FrameLayout>
    <com.instabug.library.annotation.ColorPickerPopUpView
        android:id="@+id/instabug_color_picker"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_toLeftOf="@+id/instabug_annotation_actions_container"
        xmlns:ns1="http://schemas.android.com/apk/res-auto" ns1:view_orientation="vertical"/>
    <View
        android:id="@+id/divider"
        android:background="?attr/instabug_divider_color"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/instabug_annotation_actions_container"/>
    <com.instabug.library.annotation.ShapeSuggestionsLayout
        android:orientation="vertical"
        android:id="@+id/shapeSuggestionsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/divider"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/instabug_annotation_actions_container"
        android:background="?attr/instabug_primary_color"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_alignParentRight="true">
        <RelativeLayout
            android:id="@+id/icon_brush_layout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1">
            <com.instabug.library.view.IconView
                android:textSize="26sp"
                android:textColor="?attr/instabug_theme_tinting_color"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/icon_brush"
                android:padding="0dp"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                xmlns:ns2="http://schemas.android.com/apk/res-auto" ns2:instabug_icon="brush"/>
            <View
                android:id="@+id/brush_indicator"
                android:background="@color/instabug_annotation_color_red"
                android:layout_width="18dp"
                android:layout_height="2dp"
                android:layout_marginLeft="-24dp"
                android:layout_toRightOf="@+id/icon_brush"
                android:layout_below="@+id/icon_brush"/>
        </RelativeLayout>
        <com.instabug.library.view.IconView
            android:textSize="26sp"
            android:textColor="?attr/instabug_theme_tinting_color"
            android:gravity="center"
            android:id="@+id/icon_magnify"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            xmlns:ns3="http://schemas.android.com/apk/res-auto" ns3:instabug_icon="magnify"/>
        <com.instabug.library.view.IconView
            android:textSize="26sp"
            android:textColor="?attr/instabug_theme_tinting_color"
            android:gravity="center"
            android:id="@+id/icon_blur"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            xmlns:ns4="http://schemas.android.com/apk/res-auto" ns4:instabug_icon="blur"/>
        <com.instabug.library.view.IconView
            android:textSize="26sp"
            android:textColor="?attr/instabug_theme_tinting_color"
            android:gravity="center"
            android:id="@+id/icon_undo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            xmlns:ns5="http://schemas.android.com/apk/res-auto" ns5:instabug_icon="undo"/>
    </LinearLayout>
</RelativeLayout>
